<h1>Edit Profile</h1>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <% if user_signed_in?%>
    <%= f.input :current_password %>
  <% else %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>


<%= link_to "Change Password", user_change_password_path(@user) %>
